  import Gradient from 'javascript-color-gradient';

export default async (props,{$store,$,$on,$f7,$update}) => {
  const gradientArray = new Gradient()
    .setColorGradient('#3498db', '#e74c3c')
    .setMidpoint(5)
    .getColors();
